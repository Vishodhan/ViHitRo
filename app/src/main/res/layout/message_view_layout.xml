<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bot_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bot_image_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bot_icon" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bot_image_view"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#d0d0d0"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/card_edge" />

            <TextView
                android:id="@+id/bot_message_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical"
                android:text="@string/hello_there_how_are_you_i_am_very_good_what_about_you"
                android:textColor="#000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/user_icon" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image_view"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#dcdcdc"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/user_message_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical"
                android:text="@string/i_am_good"
                android:textColor="#000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>